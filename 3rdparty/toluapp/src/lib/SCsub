Import('env')


sources = [
	'tolua_event.c',
	'tolua_is.c',
	'tolua_map.c',
	'tolua_push.c',
	'tolua_to.c',
	]

env.lib_target_static = env.Library('#/lib/'+env['tolua_lib']+'_static', sources)

if env['shared']:
	env.lib_target = env.SharedLibrary('#lib/'+env['tolua_lib'], sources)
else:
	env.lib_target = env.Library('#/lib/'+env['tolua_lib'], sources)

